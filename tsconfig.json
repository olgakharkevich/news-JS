{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",
    "allowJs": true,                               
    "forceConsistentCasingInFileNames": true,            
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false 
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
